<div class="card">
  <h3 class="card-header">
    <%= @article.title %>
  </h3>
  <div class="card-body">
    <p class="card-text">
      <%= @article.body %>
    </p>  
  </div>
  <div class='card-footer'>
    <div class="row">
      <div class="col-md-8"> 
        Created on: <%= @article.created_at.strftime("%b %d, %Y") %>
      </div>
      <%= article_owner %>
    </div>
  </div>
  <hr>
  <div class='card-header'>
    <h3 class='text-left'>Comments:</h3>
  </div>
  <%= render @article.comments %>
  <hr>
   <%= render 'comments/comment_form' %>
</div>