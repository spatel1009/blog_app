<div class="card">
  <h3 class="card-header">
    <%= @article.title %>
  </h3>
  <div class="card-body">
    <p class="card-text">
      <%= @article.body %>
    </p>  
  </div>
  <div class='card-footer'>
    <div class="row">
      <div class="col-md-8"> 
        Created on: <%= @article.created_at.strftime("%b %d, %Y") %>
      </div>
      <div class="col-md-2">
        <%= link_to "Edit Article", edit_article_path(@article), class: 'btn btn-primary' %>
      </div>
      <div class="col-md-2">
        <%= link_to 'Delete Article', article_path(@article), method: :delete, data: { confirm: 'Are you sure you want to delete the article?'}, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>