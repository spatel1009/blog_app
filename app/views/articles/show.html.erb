<div class="card">
  <h3 class="card-header">
    <%= @article.title %>
  </h3>
  <div class="card-body">
    <p class="card-text">
      <%= @article.body %>
    </p>  
  </div>
  <div class='card-footer'>
    <div class="row">
      <div class="col-sm-9"> 
        Created on: <%= @article.created_at.strftime("%b %d, %Y") %>
      </div>
      <div class="col-sm-2">
        <%= link_to "Edit Article", edit_article_path(@article), class: 'btn btn-primary' %>
      </div>
      <div class="col-sm-1">
        Delete
      </div>
    </div>
  </div>
</div>